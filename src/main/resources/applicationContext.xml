<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.w3.org/1999/xhtml"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location=""

    <bean id="musicBean" class="org.alishev.springcourse.JazzMusic">
    </bean>
    <bean id="musicPlayer" class="org.alishev.springcourse.MusicPlayer">
        <!--<constructor-arg ref="musicBean"/> - works as a MusicPlayer constructor-->
        <property name="music" ref="musicBean"/><!--Creates new MusicPlayer() with default constructor and setMusic()-->
        <property name="name" value="some name"/>
        <property name="volume" value="30"/>
    </bean>

</beans>